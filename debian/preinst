#!/bin/sh

set -e

case "$1" in
    install|upgrade)
    
	# Previously, we were using the wrong method to disable services, so let's fix that.

	# /etc/init/network-manager.conf
	if [ -f /etc/init/network-manager.conf.DISABLED ]; then
		mv /etc/init/network-manager.conf.DISABLED /etc/init/network-manager.conf
		echo "manual" > /etc/init/network-manager.override
	fi

	# /etc/init/salt-master.conf
	if [ -f /etc/init/salt-master.DISABLED ]; then
		mv /etc/init/salt-master.DISABLED /etc/init/salt-master.conf
		echo "manual" > /etc/init/salt-master.override
	fi

	# /etc/init/salt-minion.conf
	if [ -f /etc/init/salt-minion.DISABLED ]; then
		mv /etc/init/salt-minion.DISABLED /etc/init/salt-minion.conf
		echo "manual" > /etc/init/salt-minion.override
	fi

    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
